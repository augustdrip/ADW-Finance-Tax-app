{
  "buildCommand": "npm run build && npx prisma generate",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    {
      "source": "/api/mercury/:path*",
      "destination": "https://mercury-proxy.onrender.com/api/mercury/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
